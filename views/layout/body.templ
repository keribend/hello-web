package layout

import (
	"strconv"
)

templ Body(counter int) {
	<body>
		@AppContent(counter)
	</body>
}

templ AppContent(counter int) {
	<h1>Hello AppContent web app!</h1>
	<h1 class="text-3xl font-bold underline">Hello AppContent web app!</h1>
	@GlobalCounter(counter)
	@CounterForm()
}

templ GlobalCounter(counter int) {
	<p>Global: { strconv.Itoa(counter) }</p>
}

templ CounterForm() {
	<form action="/" method="POST">
		<div><button class="btn btn-primary" type="submit" name="global" value="global">Global</button></div>
	</form>
}

